                            "hsl(23, 80%, 97%)",
                            [
                                "interpolate",
                                [
                                    "linear"
                                ],
                                [
                                    "get",
                                    "height"
                                ],
                                0,
                                "hsl(40, 39%, 92%)",
                                200,
                                "hsl(23, 80%, 97%)"
