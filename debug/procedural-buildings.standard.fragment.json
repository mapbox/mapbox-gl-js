                "building-flood-light-color": "hsl(30, 79%, 81%)",
                "building-cutoff-fade-range": 0.5,
                "building-facade-emissive-chance": [
                    "interpolate",
                    [
                        "linear"
                    ],
                    [
                        "measure-light",
                        "brightness"
                    ],
                    0.1,
                    0.1,
                    0.4,
                    0
                ],
                "building-emissive-strength": [
                    "case",
                    ["to-boolean", ["feature-state", "select"]],
                    [
                        "match",
                        [
                            "get",
                            "building-part"
                        ],
                        "door",
                        5.0,
                        [
                            "interpolate",
                            ["linear"],
                            ["at", 2, ["to-hsla", ["config", "colorBuildingSelect"]]],
                            50,
                            0.6,
                            90,
                            0.4
                        ]
                    ],
                    ["to-boolean", ["feature-state", "highlight"]],
                    [
                        "match",
                        [
                            "get",
                            "building-part"
                        ],
                        "door",
                        5.0,
                        [
                            "interpolate",
                            ["linear"],
                            ["at", 2, ["to-hsla", ["config", "colorBuildingHighlight"]]],
                            50,
                            0.6,
                            90,
                            0.4
                        ]
                    ],
                    [
                        "match",
                        [
                            "get",
                            "building-part"
                        ],
                        "roof",
                        0.02,
                        "window",
                        [
                            "match",
                            [
                                "config",
                                "lightPreset"
                            ],
                            "day",
                            0,
                            [
                                "random",
                                0,
                                0.2,
                                [
                                    "id"
                                ]
                            ]
                        ],
                        "door",
                        0.5,
                        [
                            "match",
                            [
                                "config",
                                "lightPreset"
                            ],
                            "day",
                            0.6,
                            0
                        ]
                    ]
                ],
                "building-color": [
                    "case",
                    ["to-boolean", ["feature-state", "select"]],
                    [
                        "match",
                        [
                            "get",
                            "building-part"
                        ],
                        "door",
                        [
                            "hsl",
                            0.0,
                            0.0,
                            100.0
                        ],
                        ["config", "colorBuildingSelect"]
                    ],
                    ["to-boolean", ["feature-state", "highlight"]],
                    [
                        "match",
                        [
                            "get",
                            "building-part"
                        ],
                        "door",
                        [
                            "hsl",
                            0.0,
                            0.0,
                            100.0
                        ],
                        ["config", "colorBuildingHighlight"]
                    ],
                    [
                        "match",
                        [
                            "get",
                            "building-part"
                        ],
                        "window",
                        [
                            "hsl",
                            38,
                            5,
                            [
                                "random",
                                90,
                                94,
                                [
                                    "id"
                                ]
                            ]
                        ],
                        "wall",
                        [
                            "case",
                            [
                                "all",
                                [
                                    "has",
                                    "building_id"
                                ],
                                [
                                    ">=",
                                    [
                                        "get",
                                        "height"
                                    ],
                                    25
                                ]
                            ],
                            "hsl(40, 43%, 95%)",
                            [
                                "hsl",
                                40,
                                50,
                                [
                                    "random",
                                    92,
                                    98,
                                    [
                                        "id"
                                    ]
                                ]
                            ]
                        ],
                        "roof",
                        [
                            "case",
                            [
                                "all",
                                [
                                    "<=",
                                    [
                                        "get",
                                        "vertex_count"
                                    ],
                                    16
                                ],
                                [
                                    "<=",
                                    [
                                        "get",
                                        "height"
                                    ],
                                    25
                                ],
                                [
                                    "in",
                                    [
                                        "get",
                                        "roof_type"
                                    ],
                                    [
                                        "literal",
                                        [
                                            "gabled",
                                            "hipped",
                                            "pyramidal"
                                        ]
                                    ]
                                ]
                            ],
                            [
                                "hsl",
                                [
                                    "random",
                                    23,
                                    32,
                                    [
                                        "id"
                                    ]
                                ],
                                50,
                                [
                                    "random",
                                    88,
                                    92,
                                    [
                                        "id"
                                    ]
                                ]
                            ],
                            [
                                "==",
                                [
                                    "get",
                                    "roof_type"
