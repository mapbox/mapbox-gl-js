{
  "name": "mapbox-gl",
  "description": "A WebGL interactive maps library",
  "version": "0.1.1",
  "main": "js/mapbox-gl.js",
  "license": "BSD",
  "dependencies": {
    "csscolorparser": "~1.0.2",
    "geojson-rewind": "~0.1.0",
    "mapbox-gl-style-spec": "git+https://github.com/mapbox/mapbox-gl-style-spec.git#master",
    "pbf": "0.0.1",
    "queue-async": "^1.0.7",
    "rbush": "~1.3.2",
    "unitbezier": "0.0.0",
    "vector-tile": "0.1.1",
    "point-geometry": "0.0.0"
  },
  "devDependencies": {
    "benchmark": "~1.0.0",
    "brfs": "1.1.2",
    "browserify": "~4.2.0",
    "envify": "2.0.0",
    "faucet": "0.0.1",
    "gl": "0.0.5",
    "glify": "0.4.0",
    "hintify": "^0.1.0",
    "istanbul": "^0.3.0",
    "jshint": "^2.5.2",
    "mocha": "~1.20.1",
    "request": "^2.37.0",
    "spritesmith": "0.19.2",
    "tape": "2.13.3",
    "uglify-js": "2.4.14",
    "watchify": "0.8.1",
    "zuul": "1.8.0"
  },
  "browserify": {
    "transform": [
      "envify",
      "hintify",
      "glify",
      "brfs"
    ]
  },
  "browser": {
    "./js/util/ajax.js": "./js/util/browser/ajax.js",
    "./js/util/browser.js": "./js/util/browser/browser.js",
    "./js/util/canvas.js": "./js/util/browser/canvas.js",
    "./js/util/dispatcher.js": "./js/util/browser/dispatcher.js"
  },
  "scripts": {
    "test": "npm run build && tape test/js/*/*.js | faucet",
    "test-remote": "zuul -- test/js/*/*.js",
    "test-browser": "zuul test/js/*/*.js --local",
    "watch": "watchify -v -d js/mapbox-gl.js -o dist/mapbox-gl-dev.js",
    "build": "browserify -d js/mapbox-gl.js > dist/mapbox-gl-dev.js",
    "production": "browserify -i js/render/draw{vertices,debug}.js -d js/mapbox-gl.js | uglifyjs -c drop_console=true > dist/mapbox-gl.js",
    "prepublish": "mkdir -p dist && npm run build && npm run production",
    "cov": "istanbul cover tape test/js/*/*.js -x js/lib/glmatrix.js"
  }
}
