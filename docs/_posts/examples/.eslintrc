{
  "plugins": ["html"],
  "globals": {
    "mapboxgl": true,
    "MapboxGeocoder": true,
    "MapboxDirections": true,
    "turf": true,
    "d3": true
  },
  "rules": {
    "strict": "off",
    "no-unused-vars": ["error", {varsIgnorePattern: "map|popup"}],
    "no-loop-func": "off",
    "no-var": "off",
    "prefer-arrow-callback": "off",
    "prefer-template": "off"
  },
  "env": {
    "browser": true
  }
}
