{
  "version": 8,
  "metadata": {
    "test": {
      "height": 512,
      "width": 512,
      "queryGeometry": [
        [230, 40],
        [345, 65]
      ]
    }
  },
  "center": [90.6, 54.1],
  "zoom": 1.5,
  "pitch": 0,
  "bearing": 0,
  "projection": {
    "name": "globe"
  },
  "sources": {
    "satellite": {
      "type": "raster",
      "tiles": [
        "local://tiles/{z}-{x}-{y}.satellite.png"
      ],
      "maxzoom": 17,
      "tileSize": 256
    },
    "places": {
      "type": "geojson",
      "data": "local://data/places.geojson"
    }
  },
  "layers": [
    {
      "id": "raster",
      "type": "raster",
      "source": "satellite",
      "paint": {
        "raster-fade-duration": 0
      }
    },
    {
      "id": "circle",
      "type": "circle",
      "source": "places",
      "filter": ["==", "region", "North America"],
      "paint": {
        "circle-radius": 5,
        "circle-color": "#ff0000",
        "circle-pitch-alignment": "map",
        "circle-pitch-scale": "viewport"
      }
    }
  ]
}