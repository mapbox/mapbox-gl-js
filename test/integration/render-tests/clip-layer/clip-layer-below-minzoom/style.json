          "line-emissive-strength": 1
      }
    },
    {
      "id": "tree-layer",
      "type": "model",
      "source": "trees",
      "source-layer": "trees",
      "layout" : {
        "model-id": 
          ["match", ["%", ["id"], 4],
            0, "maple1",
            1, "maple2",
            3, "oak1",
            "oak2"]
      },
      "paint": {
        "model-rotation": ["match", ["%", ["id"], 4],
          0, ["literal", [0.0, 0.0, 0.0]],
          1, ["literal", [0.0, 0.0, 50.0]],
          2, ["literal", [10.0, 0.0, 120.0]],
          ["literal", [0.0, -3.0, -60]]],
        "model-scale": ["match", ["%", ["id"], 3],
          0, ["literal", [3.0, 3.25, 3.0]],
          1, ["literal", [1.8, 1.9, 1.8]],
          ["literal", [5.2, 5.1, 5.1]]],
        "model-color": [
          "case",
          ["boolean", ["feature-state", "hover"], false],
          "blue",
          ["match", ["%", ["id"], 6],
            0, "orange",
            1, "gray",
            2, "white",
            3, "pink",
            4, "yellow",
            "green"]
        ],
        "model-color-mix-intensity": 0.2,
        "model-cutoff-fade-range": 0.2
      }
    },
    {
      "id": "extrusion",
      "type": "fill-extrusion",
      "source": "mapbox",
      "source-layer": "building",
      "minzoom": 15,
      "paint": {
        "fill-extrusion-color": "lightblue",
        "fill-extrusion-height": ["get", "height"],
        "fill-extrusion-vertical-scale": 0.6,
        "fill-extrusion-opacity": 0.4,
        "fill-extrusion-cutoff-fade-range": 0.2
      }
    },
    {
      "id": "geometry",
      "type": "symbol",
      "source": "symbols",
      "layout": {
          "icon-image": "rocket-12",
          "text-field": "Mapbox",
          "text-font": [
            "Open Sans Semibold",
            "Arial Unicode MS Bold"
          ],
          "text-allow-overlap": true,
          "text-ignore-placement": true,
          "text-offset": [0, 1]
      }
    },
    {
      "id": "eraser",
      "type": "clip",
      "source": "eraser",
      "layout": {
        "clip-layer-types": ["model", "symbol"]
      },
      "minzoom": 16,
      "maxzoom": 17
    }
  ]
